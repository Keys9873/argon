    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "inlineSources": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "lib": ["es2021"],
    "module": "node16",
    "skipLibCheck": true,
  },
  "include": ["./src", "./configs", "./package.json", "./tests"],
