{
  "name": "@argoncs/api-server",
  "version": "0.2.1",
  "description": "Argon Contest Server Backend",
  "author": "Harry Chen",
  "license": "AGPL-3.0",
  "types": "./dist/src/index.d.ts",
  "main": "./dist/src/index.js",
  "repository": "github:chenhongqiao/argon",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "tap": {
    "coverage": false
  },
  "scripts": {
    "runDev": "bash -c 'source ../../set-env.sh && node dist/src/dev.js'",
    "runTest": "bash -c 'source tests/use-test-env.sh && tap --after=dist/tests/dropTestDb.js dist/tests/**/*.test.js'",
    "prepack": "tsc --build .",
    "dev": "yarn prepack && yarn runDev",
    "test": "yarn prepack && yarn runTest"
  },
  "devDependencies": {
    "@types/tap": "^15.0.8",
    "c8": "^8.0.1",
    "tap": "^16.3.8",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@argoncs/common": "workspace:*",
    "@argoncs/types": "workspace:*",
    "@chenhongqiao/fastify-http-errors-enhanced": "^4.1.0",
    "@fastify/auth": "^4.3.0",
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "^8.3.0",
    "@fastify/sensible": "^5.2.0",
    "@fastify/swagger": "^8.8.0",
    "@fastify/type-provider-typebox": "^3.3.0",
    "@sendgrid/mail": "^7.7.0",
    "@sinclair/typebox": "^0.29.4",
    "fastify": "^4.19.2",
    "gravatar-url": "^4.0.1",
    "http-errors-enhanced": "^1.0.13",
    "nanoid": "^4.0.2"
  }
}
