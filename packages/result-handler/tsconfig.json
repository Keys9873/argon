{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "inlineSources": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "lib": [
      "es2021"
    ],
    "module": "node16",
    "skipLibCheck": true
  },
  "include": [
    "./src",
    "./package.json"
  ],
  "references": [
    {
      "path": "../common"
    },
    {
      "path": "../types"
    }
  ]
}
